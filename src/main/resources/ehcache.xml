<ehcache>

  <diskStore path="${webapp.root}"/>

  <defaultCache maxElementsInMemory="10000" maxElementsOnDisk="0" eternal="true"
    overflowToDisk="true" diskPersistent="false" timeToIdleSeconds="0" timeToLiveSeconds="0"
    diskSpoolBufferSizeMB="50" diskExpiryThreadIntervalSeconds="120"
    memoryStoreEvictionPolicy="LFU"/>

</ehcache>